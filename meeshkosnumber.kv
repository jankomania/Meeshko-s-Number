<MainMenu>
    GridLayout:
        size: root.width, root.height
        cols: 1

        Label:
            text: "Meeshko's Number"
            font_size: 50
            size: root.width, root.height / 2

        GridLayout:
            cols: 2
            size_hint: None, None
            size: root.width, root.height / 5

            Label:
                text: 'Difficulty:'
                font_size: 30
                size_hint: None, None
                size: root.width / 4, root.height / 5
                

            GridLayout:
                cols: 3
                size_hint: None, None
                size: root.width * 0.75, root.height / 5

                Button:
                    text: 'Easy'
                    on_press: root.easy()
                
                Button:
                    text: 'Medium'
                    on_press: root.med()

                Button:
                    text: 'Hard'
                    on_press: root.hard()

        Button:
            text: 'Start Game'
            on_press: root.printr()
            font_size: 30
            size_hint: None, None
            size: root.width, root.height / 4