WindowManager:
    MainMenu:
    GameWin:


<MainMenu>:
    name: 'Main Menu'

    GridLayout:
        size: root.width, root.height
        cols: 1

        Label:
            text: "Meeshko's Number"
            font_size: 50
            size: root.width, root.height / 2

        GridLayout:
            cols: 2
            size_hint: None, None
            size: root.width, root.height / 5

            Label:
                text: 'Difficulty:'
                font_size: 30
                size_hint: None, None
                size: root.width / 4, root.height / 5
                

            GridLayout:
                cols: 3
                size_hint: None, None
                size: root.width * 0.75, root.height / 5

                Button:
                    text: 'Easy'
                    on_press: root.easy()
                
                Button:
                    text: 'Medium'
                    on_press: root.med()

                Button:
                    text: 'Hard'
                    on_press: root.hard()

        Button:
            text: 'Start Game'
            on_release:
                app.root.current = 'Game Window'
                root.manager.transition.direction = 'down'
            font_size: 30
            size_hint: None, None
            size: root.width, root.height / 4


<GameWin>:
    name: 'Game Window'
    #size_hint: None, None
    
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 3

            Label:
                text: 'Level:'
                size: root.width / 4, root.height / 14

            Label:
                text: 'Score:'
                size: root.width / 2, root.height / 14

            Label:
                text: 'Lives:'
                size: root.width / 4, root.height / 14

            Label:
                text: '0'
                size: root.width / 4, root.height / 14

            Label:
                text: '0'
                size: root.width / 2, root.height / 14

            Label:
                text: '0'
                size: root.width / 4, root.height / 14
                