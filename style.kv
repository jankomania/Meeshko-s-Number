WindowManager:
    MainMenu:
    GameWin:


<MainMenu>:
    name: 'Main Menu'

    GridLayout:
        size: root.width, root.height
        cols: 1

        Label:
            text: "Meeshko's Number"
            font_size: 50
            size: root.width, root.height / 2

        GridLayout:
            cols: 2
            size_hint: None, None
            size: root.width, root.height / 5

            Label:
                text: 'Difficulty:'
                font_size: 30
                size_hint: None, None
                size: root.width / 4, root.height / 5
                

            GridLayout:
                cols: 3
                size_hint: None, None
                size: root.width * 0.75, root.height / 5

                Button:
                    text: 'Easy'
                    on_press: root.easy()
                
                Button:
                    text: 'Medium'
                    on_press: root.med()

                Button:
                    text: 'Hard'
                    on_press: root.hard()

        Button:
            text: 'Start Game'
            on_release:
                app.root.current = 'Game Window'
                root.manager.transition.direction = 'up'
            font_size: 30
            size_hint: None, None
            size: root.width, root.height / 4


<GameWin>:
    name: 'Game Window'
    #size_hint: None, None
    
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 3

            Label:
                text: 'Level:'
                size: root.width / 4, root.height / 14

            Label:
                text: 'Score:'
                size: root.width / 2, root.height / 14

            Label:
                text: 'Lives:'
                size: root.width / 4, root.height / 14

            Label:
                text: '0'
                size: root.width / 4, root.height / 14

            Label:
                text: '0'
                size: root.width / 2, root.height / 14

            Label:
                text: '0'
                size: root.width / 4, root.height / 14

        GridLayout:
            cols: 2

            Label:
                text: 'From:'
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                text: ''
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                text: 'To:'
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                text: ''
                size: root.width / 2, root.height / 7 * 2 / 3
            
            Label:
                text: 'Input:'
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                text: ''
                size: root.width / 2, root.height / 7 * 2 / 3

        GridLayout:
            cols: 3

            Button:
                text: '1'
                size: root.width / 3, root.height / 7

            Button:
                text: '2'
                size: root.width / 3, root.height / 7
            
            Button:
                text: '3'
                size: root.width / 3, root.height / 7
            
            Button:
                text: '4'
                size: root.width / 3, root.height / 7
            
            Button:
                text: '5'
                size: root.width / 3, root.height / 7
            
            Button:
                text: '6'
                size: root.width / 3, root.height / 7
            
            Button:
                text: '7'
                size: root.width / 3, root.height / 7
            
            Button:
                text: '8'
                size: root.width / 3, root.height / 7
            
            Button:
                text: '9'
                size: root.width / 3, root.height / 7
            
            Button:
                text: 'Back'
                size: root.width / 3, root.height / 7
                on_release:
                    app.root.current = 'Main Menu'
                    root.manager.transition.direction = 'down'
            
            Button:
                text: '0'
                size: root.width / 3, root.height / 7
            
            Button:
                text: 'Enter'
                size: root.width / 3, root.height / 7
            
            