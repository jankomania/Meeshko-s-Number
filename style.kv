WindowManager:
    MainMenu:
    GameWin:


<Label>:
    font_size: 50


<MainMenu>:
    name: 'Main Menu'

    GridLayout:
        size: root.width, root.height
        cols: 1

        Label:
            text: "Meeshko's Number"
            font_size: 50
            size: root.width, root.height / 2

        GridLayout:
            cols: 2
            size_hint: None, None
            size: root.width, root.height / 5

            Label:
                text: 'Difficulty:'
                font_size: 30
                size_hint: None, None
                size: root.width / 4, root.height / 5


            GridLayout:
                cols: 3
                size_hint: None, None
                size: root.width * 0.75, root.height / 5

                Button:
                    text: 'Easy'
                    on_press: root.easy()
                
                Button:
                    text: 'Medium'
                    on_press: root.med()

                Button:
                    text: 'Hard'
                    on_press: root.hard()

        Button:
            text: 'Start Game'
            on_release:
                app.root.current = 'Game Window'
                root.manager.transition.direction = 'up'
                root.start_game()
            font_size: 100
            size_hint: None, None
            size: root.width, root.height / 4


<GameWin>:
    name: 'Game Window'
    
    label_input: label_input
    label_lives: label_lives
    
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 3

            Label:
                text: 'Level:'
                size: root.width / 4, root.height / 14

            Label:
                text: 'Score:'
                size: root.width / 2, root.height / 14

            Label:
                text: 'Lives:'
                size: root.width / 4, root.height / 14

            Label:
                text: '0'
                size: root.width / 4, root.height / 14

            Label:
                text: '0'
                size: root.width / 2, root.height / 14

            Label:
                id: label_lives
                text: '0'
                size: root.width / 4, root.height / 14

        GridLayout:
            cols: 2

            Label:
                text: 'From:'
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                text: ''
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                text: 'To:'
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                text: ''
                size: root.width / 2, root.height / 7 * 2 / 3
            
            Label:
                text: 'Input:'
                size: root.width / 2, root.height / 7 * 2 / 3

            Label:
                id: label_input
                text: ''
                size: root.width / 2, root.height / 7 * 2 / 3

        GridLayout:
            cols: 3

            Button:
                text: '1'
                size: root.width / 3, root.height / 7
                on_release: root.one()

            Button:
                text: '2'
                size: root.width / 3, root.height / 7
                on_release: root.two()
            
            Button:
                text: '3'
                size: root.width / 3, root.height / 7
                on_release: root.three()
            
            Button:
                text: '4'
                size: root.width / 3, root.height / 7
                on_release: root.four()
            
            Button:
                text: '5'
                size: root.width / 3, root.height / 7
                on_release: root.five()
            
            Button:
                text: '6'
                size: root.width / 3, root.height / 7
                on_release: root.six()
            
            Button:
                text: '7'
                size: root.width / 3, root.height / 7
                on_release: root.seven()
            
            Button:
                text: '8'
                size: root.width / 3, root.height / 7
                on_release: root.eight()
            
            Button:
                text: '9'
                size: root.width / 3, root.height / 7
                on_release: root.nine()
            
            Button:
                text: 'Delete'
                size: root.width / 3, root.height / 7
                on_release: root.delete()
            
            Button:
                text: '0'
                size: root.width / 3, root.height / 7
                on_release: root.zero()
            
            Button:
                text: 'Enter'
                size: root.width / 3, root.height / 7
                on_release: root.submit()
            
            